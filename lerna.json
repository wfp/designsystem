{
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--frozen-lockfile"
  ],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "actions/**",
    "codemods/**",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md"
  ],
  "packages": [
    "actions/*",
    "codemods",
    "config/*",
    "packages/*",
    "wfp/packages/*"
  ]
}
